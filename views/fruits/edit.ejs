<%- include('../header.ejs', {name: "Edit " + fruitToBeEdited.name}) %>
    <h1>Create your new fruit below</h1>
    <form method="POST" action="/fruits/<%= idx %>?_method=PUT">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value=<%= fruitToBeEdited.name %>>
        <br>
        <label for="color">Color:</label>
        <input type="text" name="color" id="color"  value=<%= fruitToBeEdited.color %>>
        <br>
        <label for="readyToEat">Is it ready to eat? </label>
        <input type="text" name="readyToEat" id="readyToEat"  value=<%= fruitToBeEdited.readyToEat %>>
        <br>
        <label for="image">Image URL: </label>
        <input type="text" name="image" id="image"  value=<%= fruitToBeEdited.image %>>
        <br>
        <input type="submit" value="Add a fruit">
    </form>
</body>
</html>